<?xml version="1.0"?>
<config>
	<modules>
		<Idem_Slider>
			<version>1.0.3</version>
		</Idem_Slider>
	</modules>
	<frontend>
		<routers>
			<slider>
				<use>standard</use>
				<args>
					<module>Idem_Slider</module>
					<frontName>slider</frontName>
				</args>
			</slider>
		</routers>
		<layout>
            <updates>
                <slider>
                    <file>slider.xml</file>
                </slider>
            </updates>
        </layout>
	</frontend>
	<admin>
		<routers>
			<slider>
				<use>admin</use>
				<args>
					<module>Idem_Slider</module>
					<frontName>adminslider</frontName>
				</args>
			</slider>
		</routers>
	</admin>
	<adminhtml>
	   <layout>
	      <updates>
	          <slider>
	              <file>slider.xml</file>
	           </slider>
	      </updates>
	   </layout>
	   <menu>
	   		<cms>
	   			<children>
			      <set_time translate="title" module="adminhtml">
			         <title>Slider</title>
			         <sort_order>100</sort_order>
			                   <title>GÃ©rer le slider</title>
			                   <action>slider/adminhtml_index</action>
			       </set_time>
			   </children>
			</cms>
	    </menu>
	    <acl>
	        <resources>
	        	<all>
	                <title>Allow Everything</title>
	            </all>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <config>
	                                <children>
	                                    <slider_section translate="title">
	                                        <title>Configuration Slider Extension</title>
	                                        <sort_order>100</sort_order>
	                                    </slider_section>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
	    </acl>
	</adminhtml>
	<global>
		<blocks>
			<slider>
				<class>Idem_Slider_Block</class>
			</slider>
		</blocks>
		<helpers>
			<slider>
				<class>Idem_Slider_Helper</class>
			</slider>
		</helpers>
		<models>
			<slider>
				<class>Idem_Slider_Model</class>
				<resourceModel>slider_resource</resourceModel>
			</slider>
			<slider_resource>
				<class>Idem_Slider_Model_Resource</class>
				<entities>
					<slider>
						<table>slider</table>
					</slider>
					<slider_product>
						<table>slider_product</table>
					</slider_product>
				</entities>
			</slider_resource>
		</models>
		<resources>
			<slider_setup>
				<setup>
					<module>Idem_Slider</module>
				</setup>
				<connection>
                    <use>core_setup</use>
                </connection>
			</slider_setup>
			<slider_write>
				<connection>
					<use>core_write</use>
				</connection>
			</slider_write>
			<slider_read>
				<connection>
					<use>core_read</use>
				</connection>
			</slider_read>
		</resources>
	</global>
</config>