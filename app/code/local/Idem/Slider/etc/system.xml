<?xml version="1.0"?>
<config>
    <tabs>
        <slider_tab translate="label" module="slider">
            <label>Slider Extension</label>
            <sort_order>100</sort_order>
        </slider_tab>
    </tabs>
    <sections>
        <slider_section translate="label">
            <label>Option du slider</label>
            <tab>slider_tab</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <slider_group translate="label">
                    <label>Dur√©es et Effets</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <slider_speed translate="label">
                            <label>Vitesse de transition</label>
                            <comment>Slide transition duration (in ms)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slider_speed>
                        <slider_duration translate="label">
                            <label>Temps par slide</label>
                            <comment>The amount of time (in ms) between each auto transition</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slider_duration>
                    </fields>
                </slider_group>
            </groups>
        </slider_section>
    </sections>
</config>