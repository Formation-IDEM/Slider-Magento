<?xml version="1.0" encoding="UTF-8" ?>

<config>
    <modules>
        <Idem_Testimonial>
            <version>0.1.1</version>
        </Idem_Testimonial>
    </modules>
    <frontend>
        <routers>
            <testimonial>
                <use>standard</use>
                <args>
                    <module>Idem_Testimonial</module>
                    <frontName>testimonial</frontName>
                </args>
            </testimonial>
            <add-testimonial>
                <use>standard</use>
                <module>Idem_Testimonial</module>
                <frontName>add-testimonial</frontName>
            </add-testimonial>
        </routers>
        <layout>
            <updates>
                <testimonial>
                    <file>testimonial.xml</file>
                </testimonial>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <testimonial>
                <class>Idem_Testimonial_Block</class>
            </testimonial>
        </blocks>
        <models>
            <testimonial>
                <class>Idem_Testimonial_Model</class>
                <resourceModel>testimonial_resource</resourceModel>
            </testimonial>
            <testimonial_resource>
                <class>Idem_Testimonial_Model_Resource</class>
                <entities>
                    <testimonial>
                        <table>testimonial</table>
                    </testimonial>
                </entities>
            </testimonial_resource>
        </models>
        <resources>
            <testimonial_setup>
                <setup>
                    <module>Idem_Testimonial</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </testimonial_setup>
            <testimonial_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </testimonial_read>
            <testimonial_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </testimonial_write>
        </resources>
        <helpers>
            <testimonial>
                <class>Idem_Testimonial_Helper</class>
            </testimonial>
        </helpers>
    </global>
    <admin>
        <routers>
            <testimonial>
                <use>admin</use>
                <args>
                    <module>Idem_Testimonial</module>
                    <frontName>admintestimonial</frontName>
                </args>
            </testimonial>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <testimonial>
                    <file>testimonial.xml</file>
                </testimonial>
            </updates>
        </layout>
        <menu>
            <testimonial module="adminhtml" translate="title">
                <title>Idem</title>
                <sort_order>100</sort_order>
                <children>
                    <set_time>
                        <title>Testimonial</title>
                        <sort_order>1</sort_order>
                        <action>admintestimonial/adminhtml_index</action>
                    </set_time>
                </children>
            </testimonial>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <testimonial_section>
                                            <title>Testimonial</title>
                                            <set_order>100</set_order>
                                        </testimonial_section>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>