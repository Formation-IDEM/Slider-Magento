<?xml version="1.0"?>
<config>
    <tabs>
        <slider_tab translate="label" module="slider">
            <label>Slider</label>
            <sort_order>100</sort_order>
        </slider_tab>
    </tabs>
    <sections>
        <slider_section translate="label">
            <label>Option du slider</label>
            <tab>slider_tab</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <slider_group translate="label">
                    <label>Approbation des témoignages</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <slider_select translate="label">
                            <label>Approuver par défaut: </label>
                            <comment>Selectionner NON, si les nouveaux témoignages doivent être modérés</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </slider_select>
                    </fields>
                </slider_group>
            </groups>
        </slider_section>
    </sections>
</config>