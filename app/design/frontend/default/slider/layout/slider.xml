<?xml version="1.0" ?>

<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>slider/owl.carousel.css</stylesheet></action>
            <action method="addCss"><stylesheet>slider/owl.theme.css</stylesheet></action>
            <action method="addCss"><stylesheet>slider/owl.transitions.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/slider.css</stylesheet></action>
            <action method="addCss"><stylesheet>jcapslide/css/style.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>jcapslide/jquery.capSlide.js</name></action>
            <action method="addItem"><type>skin_js</type><name>slider/owl.carousel.min.js</name></action>
        </reference>

    </default>

    <cms_index_index>
        <reference name="content">
            <block type="core/template" name="slider" template="slider/slide.phtml" />
        </reference>
    </cms_index_index>

    <slider_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="slider/slider" name="slider" template="slider/slide.phtml" />
        </reference>
    </slider_index_index>
</layout>