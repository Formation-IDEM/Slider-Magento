<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <slider translate="label" module="slider">
            <label>slider Extensions</label>
            <sort_order>100</sort_order>
        </slider>
    </tabs>
    <sections>
        <slider translate="label" module="slider">
            <label>slider option</label>
            <tab>slider</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <slider_group translate="label" module="slider">
                    <label>Option</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <speed_transition translate="label">
                            <label>Vitesse de transition des slides: </label>
                            <comment>Sélectionné la vitesse de transition</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed_transition>
                                                
                        <slide_time translate="label">
                            <label>Temps par slide: </label>
                            <comment>Sélectionné le temps passé par slide</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_time>  
                                              
                        <auto translate="label comment">
                            <label>Auto</label>
                            <comment>Transition automatique</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto>
                    </fields>
                </slider_group>
            </groups>
        </slider>
    </sections>
</config>