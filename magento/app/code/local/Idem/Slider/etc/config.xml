<?xml version="1.0"?>
<config>
	  <modules>
	    <Idem_Slider>
	      <version>0.1.0</version>
	    </Idem_Slider>
	  </modules>
  	  <frontend>
	  	<routers>
	  		<slider>
	  			<use>standard</use>
	  			<args>
	  				<module>Idem_Slider</module>
	  				<frontName>slider</frontName>
	  			</args>
	  		</slider>
	  	</routers>
	  	<layout>
	  		<updates>
	  			<slider>
	  				<file>slider.xml</file>
	  			</slider>
	  		</updates>
	  	</layout>
	</frontend>
	<admin>
        <routers>
            <adminslider>
                <use>admin</use>
                <args>
                    <module>Idem_Slider</module>
                    <frontName>adminslider</frontName>
                </args>
            </adminslider>
        </routers>
	</admin>
    <adminhtml>
        <layout>
            <updates>
                <slider>
                    <file>slider.xml</file>
                </slider>
            </updates>
        </layout>
        <menu>
            <cms translate="title" module="adminhtml">
                <title>CMS</title>
                <sort_order>60</sort_order>
                <children>
                    <set_time>
                        <title>GÃ¨rer les slider</title>
                        <action>adminslider/adminhtml_index</action>
                    </set_time>
                </children>
            </cms>
        </menu>
	    <acl>
	        <resources>
	            <all>
	                <title>Allow Everything</title>
	            </all>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <config>
	                                <children>
	                                    <slider>
	                                        <title>slider</title>
	                                    </slider>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
	    </acl>
  </adminhtml>
  <global>
  	<models>
  		<slider>
  			<class>Idem_Slider_model</class>
  			<resourceModel>slider_resource</resourceModel>
  		</slider>
  		<slider_resource>
  			<class>Idem_Slider_Model_Resource</class>
  			<entities>
  				<slider>
  					<table>slider</table>
  				</slider>
  			</entities>
  		</slider_resource>
  	</models>
  	<resources>
  		<slider_setup>
  			<setup>
  				<module>Idem_Slider</module>
  			</setup>
  			<connection>
  				<use>core_setup</use>
  			</connection>
  		</slider_setup>
  		<slider_read>
  			<connection>
  				<use>core_read</use>
  			</connection>
  		</slider_read>
  		<slider_write>
  			<connection>
  				<use>core_write</use>
  			</connection>
  		</slider_write>
  	</resources>
    <helpers>
      <slider>
        <class>Idem_Slider_Helper</class>
      </slider>
    </helpers>
    <blocks>
      <slider>
        <class>Idem_Slider_Block</class>
      </slider>
    </blocks>
  </global>
  <default>
    <slider>
        <slider_group>
            <speed_transition>3000</speed_transition>
            <slide_time>3000</slide_time>
            <auto>1</auto>
        </slider_group>
    </slider>
 </default>
</config>