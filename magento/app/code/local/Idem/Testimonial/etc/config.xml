<?xml version="1.0"?>
<config>
  <modules>
    <Idem_Testimonial>
      <version>0.1.1</version>
    </Idem_Testimonial>
  </modules>
  
  <admin>
     <routers>
         <testimonial>
            <use>admin</use>
            <args>
               <module>Idem_Testimonial</module>
               <frontName>admintestimonial</frontName>
            </args>
         </testimonial>
      </routers>
 </admin>
 
 <adminhtml>
 	<!-- Pour permission dans system permission role -->
 	<acl>
 		<resources>
                <all>
                    <title>Allow Everything</title>
                </all>
 			<admin>
 				<children>
 					<testimonial>
 						<title>Testimonial</title>
 						<sort_order>1000</sort_order>
 						<children>
 							<set_time>
				               <title>List testimonial</title>
				               <action>admintestimonial/adminhtml_index</action>
				            </set_time>
 						</children>
 					</testimonial>
 				</children>
 			</admin>
 		</resources>	
 	</acl>
   <layout>
      <updates>
          <testimonial>
              <file>testimonial.xml</file>
           </testimonial>
      </updates>
   </layout>
   <menu>
      <testimonial translate="title" module="adminhtml">
         <title>Testimonial</title>
         <sort_order>100</sort_order>
  		 <children>
              <set_time>
                 <title>List testimonial</title>
                 <action>admintestimonial/adminhtml_index</action>
              </set_time>
          </children>
       </testimonial>
    </menu>
  </adminhtml>
 
  <frontend>
  	<routers>
  		<testimonial>
  			<use>standard</use>
  			<args>
  				<module>Idem_Testimonial</module>
  				<frontName>testimonial</frontName>
  			</args>
  		</testimonial>
  	</routers>
  	<layout>
 	    <updates>
            <testimonial>
                <file>testimonial.xml</file>
            </testimonial>
        </updates>
  	</layout>
  </frontend>
  
  <global>
  	<models>
  		<testimonial>
  			<class>Idem_Testimonial_Model</class>
  			<resourceModel>testimonial_resource</resourceModel>
  		</testimonial>
  		<testimonial_resource>
  			<class>Idem_Testimonial_Model_Resource</class>
  			<entities>
  				<testimonial>
  					<table>testimonial</table>
  				</testimonial>
  			</entities>
  		</testimonial_resource>
  	</models>
  	<resources>
  		<testimonial_setup>
  			<setup>
  				<module>Idem_Testimonial</module>
  			</setup>
  			<connection>
  				<use>core_setup</use>
  			</connection>
  		</testimonial_setup>
        <testimonial_write>
            <connection>
                <use>core_write</use>
            </connection>
        </testimonial_write>
        <testimonial_read>
            <connection>
                <use>core_read</use>
           </connection>
        </testimonial_read>
  	</resources>
    <helpers>
      <testimonial>
        <class>Idem_Testimonial_Helper</class>
      </testimonial>
    </helpers>
    <blocks>
    	<testimonial><class>Idem_Testimonial_Block</class></testimonial>
    </blocks>
  </global>
</config>